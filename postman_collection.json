    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Artist",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Artista Test Evaluador\", \"genre\": \"Rock Acad\\u00e9mico\"}"
        },
        "url": {
          "raw": "{{base_url}}/api/artistas",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "artistas"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"status is 201\", function () { pm.response.to.have.status(201); });",
              "var json = pm.response.json();",
              "pm.environment.set(\"artistId\", json.id);",
              "pm.test(\"response has id\", function () { pm.expect(json.id).to.exist; });"
            ]
          }
        }
      ]
    },
